
pkgbase='googletest'
pkgname=('googletest')
pkgver=next
pkgrel=0
pkgdesc=""
arch=('loong64' 'x86_64')
license=('MIT')
url="https://github.com/RadeonOpenCompute/ROCT-Thunk-Interface.git"

source=(
    "git+git://nas.xinmu.moe/github.com/google/googletest.git"
)
b2sums=('SKIP')
depends=(
)
PATH=/opt/rocm-${pkgver}/bin:$PATH
prepare() {
#  sed -i '32d' hipfort/test/CMakeLists.txt
#  sed -i '32i find_package( HIP CONFIG REQUIRED )' hipfort/test/CMakeLists.txt
  mkdir build || true
  cd build
  cmake ../googletest \
  -DCMAKE_INSTALL_PREFIX=/opt/rocm-${pkgver} \
  -G "Unix Makefiles"

}
build() {
  mkdir build || true
  cd build
  cmake --build .
}

check() {
